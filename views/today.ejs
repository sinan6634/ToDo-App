<%- include('partials/header.ejs') %>

<div class="todo-container">
    <div class="header">
        <h1><%= currentDay %></h1>
    </div>
    <div class="box">
        <% for( let index = 0; index < todayToDo.length; index++ ) { %>
            <div class="list-item">
                <input type="checkbox">
                <label><%= todayToDo[index] %></label><br>
            </div>
        <% } %>
        <form class="list-item" action="/" method="POST">
            <input type="text" id="item" name="item" placeholder="Add a new item" required>
            <input type="submit" value="+">
        </form> 
    </div>
 
</div>

<%- include('partials/footer.ejs') %>